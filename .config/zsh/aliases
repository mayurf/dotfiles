# Aliases

alias vizsh="vi $ZDOTDIR/.zshrc"
alias szsh="source $ZDOTDIR/.zshrc"
alias vial="vi $ZDOTDIR/aliases"
alias vienv="vi $ZDOTDIR/envrc"
alias brewup="brew update && brew upgrade && brew cleanup"

alias ls=lsd
alias ll="lsd -la"
alias vi="nvim"
alias vim="nvim"
alias cd="z"

alias bi="brew install"
alias bc="brew install --cask"

alias doc="cd ~/Documents"
alias dow="cd ~/Downloads"
alias dri="cd ~/Google\ Drive/My\ Drive/"

alias ...="../.."
alias ....="../../.."

alias rm="nocorrect grm -i"

## Git
alias gc="git commit"
alias ga="git add"
alias gaa="git add ."
alias gah="git add -p"
alias gs="git status"
alias gb="git branch"
alias gcl="git clone"
alias gp="git push"
alias gpo="git push origin"
alias gco="git checkout"
alias gcm="git commit -m"
alias gcb="git checkout -b"
alias gl="git logline"

## Gradle
alias grb="./gradlew clean build testAll sonar -PsonarAnalysisMode=publish"
alias grun="./gradlew bootRun"
alias grt="./gradlew test"

alias k="kubectl"
alias gcheck="./gradlew check"

alias idea="open -na \"IntelliJ IDEA.app\" --args \"$@\""
alias lg="lazygit"
alias lzd='lazydocker'
alias pod='podman'
alias podps='podman ps'
alias fvi='vi $(fzf)'

alias cat="bat -p"

alias push-brain="gacp $BRAIN_LOC"
alias pull-brain="gpra $BRAIN_LOC"
alias sync-brain="pull-brain && push-brain"

alias openb="open \$(cat $HOME/bookmarks.txt| fzf | cut -d'|' -f2)"
alias claude-yolo="claude -c --model sonnet --dangerously-skip-permissions"

alias rbcurl='kubectl exec -it pod/curl -- curl '

